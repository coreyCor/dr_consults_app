<h2>FBX NEO Request</h2>

<div class="card mb-3">
  <div class="card-body">
    <h4><%= @consult.title %></h4>
    <p><%= simple_format(@consult.body) %></p>

    <hr>

    <p>
      <strong>Requested by:</strong>
      <%= @consult.asked_by.name %>
    </p>

    <p>
      <strong>Assigned team:</strong>
    </p>

    <ul>
      <% @consult.assigned_users.each do |user| %>
        <li>
          <%= user.name %>
          <span class="text-muted">
            (Local time: <%= user.local_time.strftime("%I:%M %p") %>)
          </span>
        </li>
      <% end %>
    </ul>

    <p class="text-muted mt-3">
      Created at:
      <%= @consult.created_at.in_time_zone("Pacific Time (US & Canada)").strftime("%b %d, %Y %I:%M %p") %>
    </p>
  </div>
</div>

<%= link_to "Back", :back, class: "btn btn-secondary" %>
