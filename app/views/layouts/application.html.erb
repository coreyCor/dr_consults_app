<!DOCTYPE html>
<html>
  <head>
    <title>APath Assist</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <%= javascript_importmap_tags %>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0&icon_names=pets" />
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light mb-3" id="navvy">
     <div class="container-fluid">
 
    <%= link_to "[ Antech Path Assist ]" , root_path, class: "navbar-brand" %>
    &nbsp;
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav me-auto">

        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to "Assists I requested", mine_consults_path, class: "nav-link" %>
          </li>

      <%#new nav link for notifications%>

          <li class="nav-item">
            <%= link_to "Assists asked of me", assigned_consults_path, class: "nav-link" %>
          </li>
          <%#test taskscreen link%>

      

          <!-- FBX NEO links -->
<% if current_user&.can_accept_fbx_neo? %>
  <li class="nav-item">
    <%= link_to "New FBX NEO", new_fbx_neo_consult_path, class: "nav-link" %>
  </li>

  <li class="nav-item">
    <%= link_to "My FBX NEOs", mine_fbx_neo_consults_path, class: "nav-link" %>
  </li>
<% end %>

        <% end %>
      </ul>

      <ul class="navbar-nav ms-auto">
        <% if user_signed_in? %>
 

          <% if current_user&.admin? %>
            <li class="nav-item">
              <%= link_to "Edit Users" , admin_users_path, class: "nav-link" %>
            </li>
          <% end %>

          
          <li class="nav-item">
            <%= button_to "Logout",
            destroy_user_session_path, method: :delete, class: "nav-link", form_class: "d-inline" %>
          </li>

        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>

        <% end %>
      </ul>

    </div>
  </div>
</nav>
<div class="floater">
        <% if user_signed_in? %>
      <h4><%= current_user&.name %> </h4>
       <%end%>
      
</div>
  
    <div class="container">
    



      <% if notice %>
        <div class="alert alert-info"><%= notice %></div>
      <% end %>
      <% if alert %>
        <div class="alert alert-danger"><%= alert %></div>
      <% end %>
                  <!-- Antechs logo here -->
        <div class="hero-image mb-4" style="width: 100%; height: 200px; overflow: hidden;">
          <%= image_tag "hero.jpg", style: "width: 50%; height: 100%; object-fit: cover;" %>
        </div>

      <%= yield %>
    
    
    </div>
  </body>
</html>
