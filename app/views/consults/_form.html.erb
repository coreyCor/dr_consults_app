<%= form_with(model: @consult, local: true, class: "needs-validation") do |f| %>
  <% if @consult.errors.any? %>
    <div class="alert alert-danger">
      <h4>There were errors:</h4>
      <ul>
        <% @consult.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :Accession, class: "form-label" %>
    <%= f.text_field :title, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :body, class: "form-label" %>
    <%= f.text_area :body, class: "form-control", rows: 5, required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :assigned_to_id, "Doctor:", class: "form-label" %>
    <%= f.collection_select :assigned_to_id, @eligible_users, :id, :name, { prompt: "Select a doctor" }, { class: "form-select", required: true } %>
  </div>

  <%= f.submit "Create Consult", class: "btn btn-primary" %>
<% end %>
