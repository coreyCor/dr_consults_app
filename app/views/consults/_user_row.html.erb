<turbo-frame id="row_frame_<%= user.id %>">
  <div class="table-row">
    <div>
      <% available = user.can_receive_consults? &&
                     user.available_now? &&
                     user.eligible_by_limits_and_cooldown? %>

      <% if available %>
        <%= link_to user.name,
                    new_consult_path(assigned_to_id: user.id),
                    data: { turbo_frame: "_top" },
                    class: "fw-semibold" %>
      <% else %>
        <span class="text-muted"><%= user.name %></span>
        <span class="material-symbols-outlined">pets</span>
      <% end %>
    </div>

    <div>
      <%= user.local_time.strftime("%I:%M %p") %>
      <%= user.time_zone %>
    </div>

    <div>
      <% if available %>
        <span class="badge bg-success">Available</span>
      <% else %>
        <span class="badge bg-secondary">Paused</span>
      <% end %>
    </div>
  </div>
</turbo-frame>
