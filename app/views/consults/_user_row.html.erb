
<turbo-frame id="row_frame_<%= user.id %>"
             data-controller="availability-refresh"
             data-availability-refresh-interval-value="30000">

  
<td>
  <% if eligible_users.include?(user) %>
    <%= link_to user.name,
                new_consult_path(assigned_to_id: user.id),
                data: { turbo_frame: "_top" },
                class: "fw-semibold" %>
  <% else %>
    <span class="text-muted"><%= user.name %></span>
    <span class="material-symbols-outlined">pets</span>
  <% end %>
</td>

<td>
  <%= user.local_time.strftime("%I:%M %p") %>
  <%= user.time_zone %>
</td>

<td>
  <% if eligible_users.include?(user) %>
    <span class="badge bg-success">Available</span>
  <% else %>
    <span class="badge bg-secondary">Paused</span>
  <% end %>
</td>



</turbo-frame>
