<h2 class = "pageheader"><i>Assists asked of me</i></h3>


<hr>
<br>


<% if @consults.any? %>
  <% @consults.each do |consult| %>
    <div class="consult mb-3 p-2 border rounded shadow-sm">
      <h3><%= link_to consult.title, consult_path(consult) %></h3>
      <p>Asked by: <%= consult.asked_by.name %></p>
      <p>
        Assigned:
        <%= consult.assigned_at
              .in_time_zone(current_user.time_zone)
              .strftime("%b %d, %Y") %>
      </p>
      <p>Question: <%= truncate(consult.body, length: 100) %></p>
    </div>
  <% end %>
<% else %>
  <p>No consults currently assigned to you.</p>
<% end %>
