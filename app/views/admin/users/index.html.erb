<h1>All Users</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Role</th>
      <th>Availability</th>
      <th>Daily Limit</th>
      <th>Cooldown (min)</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.user_role.capitalize %></td>
        <td>
          <%= user.available_start_time&.strftime("%H:%M") %> - 
          <%= user.available_end_time&.strftime("%H:%M") %>
        </td>
        <td><%= user.daily_consult_limit || "N/A" %></td>
        <td><%= user.cooldown_minutes || "N/A" %></td>
        <td>
          <%= link_to "Edit", edit_admin_user_path(user), class: "btn btn-sm btn-primary" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
